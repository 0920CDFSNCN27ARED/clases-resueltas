<!DOCTYPE html>
<html lang="en">
<% const title="Genre Edit" %>

<head>
    <%- include("../partials/head.ejs", {title}) %>
</head>

<body>
    <div class="container mt-5">
        <%- include("../components/page-title.ejs", {title}) %>

        <form action="/genres/<%= genre.id %>?_method=DELETE" method="POST">
            <button type="submit">DELETE</button>
        </form>

        <form action="/genres/<%= genre.id %>?_method=PATCH" method="POST">
            <label for="name">Name:</label>
            <input id="name" name="name" type="text" value="<%= genre.name %>">

            <div>
                <button type="submit">Save</button>
            </div>
        </form>
    </div>
</body>

</html>